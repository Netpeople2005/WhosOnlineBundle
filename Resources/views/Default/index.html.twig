{#% extends "::base.html.twig" %}
{% block content %#}
<h1>Usuarios Conectados</h1>
<table>
    <thead>
        <tr>
            <th>Usuario</th>
            <th>IP</th>
            <th>Fecha Login</th>
            <th>Fecha Ultimo Acceso</th>
        </tr>
    </thead>
    <tbody>
        {% for whos in onlines %}
            <tr>
                <td>{{ whos.username }}</td>
                <td>{{ whos.ip }}</td>
                <td>{{ whos.lastLogin.format('d-m-Y H:i:s') }}</td>
                <td>{{ whos.lastActivity.format('d-m-Y H:i:s') }}</td>
            </tr>
        {% endfor %}        
    </tbody>
</table>
{#% endblock %#}
